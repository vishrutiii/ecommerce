
    <%- include("../partials/header") %> 
    <%- include("../partials/navbar") %> 
    <main class="container">
        <%- include("../partials/flash") %> 
       
        <div class="row">
                <% for(let product of products){%>
                    <div class="col-lg-4  col-md-8">
                        <div class="card" style="width: 30rem; height: 30rem;" >
                            <img src=<%= product.image %>  class="card-img-top" alt="..." style="height:60%">
                            <div class="card-body">
                              <h5 class="card-title"><%= product.name %> </h5>
                              <p class="card-text"><%= product.desc %> </p>
                              <a href="/products/<%= product._id %>" class="btn btn-primary" style="background-color:#DF7861; border:#DF7861">Buy Now</a>
                              <a href="/products/<%= product._id %>/edit" class="btn btn-primary"> Edit </a>    
                            </div>
                          </div>
                    </div>
                <% }  %> 

            
        </div>
    </div>
    <%- include("../partials/footer") %>  