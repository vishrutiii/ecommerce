<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<div class="container">
  <form
    class="validated-form"
    action="/products/<%= product._id %>?_method=PATCH"
    method="POST"
    novalidate
  >
    <div class="mb-3">
      <label for="name" class="form-label">Name of Product: </label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter the name of product: "
        name="product[name]"
        value="<%=product.name%>"
        required
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price in Rs: </label>
      <input
        type="number"
        class="form-control"
        id="price"
        placeholder="Enter the price: "
        name="product[price]"
        value="<%=product.price%>"
        required
      />
    </div>
    <div>
      <label for="desc" class="form-label">Description: </label>
      <textarea
        id="desc"
        cols="30"
        rows="6"
        class="form-control"
        placeholder="Enter description here: "
        name="product[desc]"
        required
      >
<%= product.desc %> </textarea
      >
    </div>
    <br /><br />

    <button type="submit" class="btn btn-success add-btn">Add</button>
  </form>
</div>

<%- include("../partials/footer") %>
